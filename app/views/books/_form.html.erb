<%= render 'shared/errors', obj: @book%>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@book, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label 'Book Name' %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :name, class:"form-control", placeholder:"Enter book name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label 'ISBN' %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :isbn, class:"form-control", placeholder:"Enter ISBN", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label 'Author' %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :author, class:"form-control", placeholder:"Enter Author Name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label "Category" %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :category, class:"form-control", placeholder:"Enter Book Category", autofocus: true %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label "Language" %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :language, rows:8, class:"form-control", placeholder:"Enter Language" %>
        </div>
      </div>   

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label "Publisher"  %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :publisher, rows:8, class:"form-control", placeholder:"Enter Publisher Name" %>
        </div>
      </div>

      
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label "Description"  %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :description, rows:12, class:"form-control", placeholder:"Enter book description" %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label "Price"  %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :price, rows:8, class:"form-control", placeholder:"Enter Book Price " %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label "Quantity Available"  %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :quantity, rows:8, class:"form-control", placeholder:"Enter quantity of books" %>
        </div>
      </div>
      
       <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label "Cover Image"  %>
        </div>
        <div class="col-sm-6">
          <%= form.file_field :image, rows:8, class:"form-control" %>
        </div>
      </div>

      
      
     <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <% if @book.id %>
          <%= form.submit "Update", class:"btn btn-default" %>
          <% else %>
          <%= form.submit "Upload", class:"btn btn-default" %>
          <% end %>
        </div>      
      </div> 
           
      <div  class="col-xs-offset-4 col-xs-4">
        <%= link_to 'Back to Home Page', root_path, class:"btn btn-primary" %>
      </div>
     

    <% end %>  
  </div>
</div>

<h1> Books stock </h1>

<br>

<table class="table table-striped table-hover ">
  <thead>
      <tr>
        <th>Book Name</th>
        <th>Author</th>
        <th>Stock</th>
        
        
      </tr>
  </thead>
  <tbody>
  <% if not @books.nil?%>
  <% @books.each do |b| %>
    <td><%=link_to "#{b.name.capitalize}" , book_path(b)%></td>
    <td><%="#{b.author}"%></td>
    <td><%="#{b.quantity}"%></td>
    <% if can? :destroy, b %>
              
           <td>  <%= link_to 'Edit', edit_book_path(b), class:"btn btn-xs btn-success active" %> |
             <%= link_to 'Destroy', book_path(b), class:"btn btn-xs btn-danger active",
                                method: :delete,data: { confirm: 'Are you sure?' } %> </td>
    <% end %>


  </tbody>
   <% end %>
 <% end %>
  </table>
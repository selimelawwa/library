

<h1>Users Index</h1>

<br>

<table class="table table-striped table-hover ">
  <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>
  </thead>
  <tbody>
  <% if not @users.nil?%>
  <% @users.each do |user| %>
    <td><%=link_to "#{user.fname.capitalize} #{user.lname.capitalize}" , user_path(user)%></td>
    <td><%="#{user.email}"%></td>
    
    <% if can? :destroy, user %>
              
           <td>  <%= link_to 'Edit', edit_user_path(user), class:"btn btn-xs btn-success active" %> |
             <%= link_to 'Destroy', user_path(user), class:"btn btn-xs btn-danger active",
                                method: :delete,data: { confirm: 'Are you sure?' } %> </td>
    <% end %>


  </tbody>
   <% end %>
 <% end %>
  </table>







<%= render 'shared/errors', obj: @user%>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :username %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :username, class:"form-control", placeholder:"Enter username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label 'first Name' %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :fname, class:"form-control", placeholder:"Enter First Name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label 'Last Name' %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :lname, class:"form-control", placeholder:"Enter Last Name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :telephone %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :telephone, class:"form-control", placeholder:"Enter Telephone", autofocus: true %>
        </div>
      </div>
      

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :email  %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :email, rows:8, class:"form-control", placeholder:"Enter Email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :password %>
        </div>
        <div class="col-sm-6">
          <%= form.password_field :password, rows:8, class:"form-control", placeholder:"Enter password" %>
        </div>
      </div>    


     <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit "Sign up", class:"btn btn-default" %>
        </div>      
      </div> 
           
      <div  class="col-xs-offset-4 col-xs-4">
        <%= link_to 'Back to Home Page', root_path, class:"btn btn-primary" %>
      </div>
     

    <% end %>  
  </div>
</div>

<h1 align="center">Log in</h1>


<%= render 'layouts/messages'%>

    <%= form_for(:session, :html => {class: "form-horizontal", role: "form", url: login_path}) do |form| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :email %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :email, class:"form-control", placeholder:"Enter email", autofocus: true %>
        </div>
      </div>

    

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :password %>
        </div>
        <div class="col-sm-6">
          <%= form.password_field :password, rows:8, class:"form-control", placeholder:"Enter password" %>
        </div>
      </div>    


     <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit "Login", class:"btn btn-success" %>
        </div>      
      </div> 
           
      <div  class="col-xs-offset-4 col-xs-4">
        <%= link_to 'Back to Home Page', root_path, class:"btn btn-primary" %>
      </div>
     

    <% end %>  





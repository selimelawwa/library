 <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |form| %>
     
      <div class="form-group">
        <div class="col-sm-2">
          <%= form.label :name %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :name, class:"form-control", placeholder:"Enter category name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
         
          <%= form.submit "Save", class:"btn btn-default" %>
         
        </div>      
      </div> 
           
      <div  class="col-xs-offset-4 col-xs-4">
        <%= link_to 'Back to Home Page', root_path, class:"btn btn-primary" %>
      </div>
     

    <% end %>  